!!!
%html
  %head
    %title "Caldron: #{content_for?(:title) ? content_for(:title) : "Home" }"
    %meta{ :name => "description", :content => "Caldron is a Web application for parents to manage chores for a family" }
    %meta{ :name => "Errin Larsen", :name => "author" }
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tags
%body
  .topbar
    .fill
      .container
        = link_to "Caldron", root_path, :class => "brand"
        %ul.nav
          -# %li
          -#   // First nav option here
          -# %li
          -#   // Second nav option here
          -# %li
          -#   // and so on
        %ul.nav.secondary-nav
          %li
            -if user_signed_in?
              = link_to "Sign out", destroy_user_session_path, :method => :delete
            -else
              = link_to "Sign in", new_user_session_path

  .container
    .content
      .row
        -if notice
          .alert-message.info
            = notice
        -if alert
          .alert-message.info
            = alert

      = yield
